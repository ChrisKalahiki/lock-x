[Unit]
Description=Lock X Status Server
Documentation=https://github.com/user/lock-x
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/code/lock-x
ExecStart=%h/.bun/bin/bun run server.ts
Restart=always
RestartSec=5
Environment=PATH=%h/.bun/bin:/usr/local/bin:/usr/bin:/bin

[Install]
WantedBy=default.target
