{
  "manifest_version": 3,
  "name": "Lock X",
  "version": "1.0.0",
  "description": "Blocks x.com when Claude Code is idle - stay productive!",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:51736/*",
    "*://*.x.com/*",
    "*://x.com/*",
    "*://*.twitter.com/*",
    "*://twitter.com/*",
    "*://*.reddit.com/*",
    "*://reddit.com/*",
    "*://*.youtube.com/*",
    "*://youtube.com/*",
    "*://*.facebook.com/*",
    "*://facebook.com/*",
    "*://*.instagram.com/*",
    "*://instagram.com/*",
    "*://*.tiktok.com/*",
    "*://tiktok.com/*"
  ],
  "web_accessible_resources": [{
    "resources": ["blocked.html"],
    "matches": ["<all_urls>"]
  }],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.x.com/*",
        "*://x.com/*",
        "*://*.twitter.com/*",
        "*://twitter.com/*",
        "*://*.reddit.com/*",
        "*://reddit.com/*",
        "*://*.youtube.com/*",
        "*://youtube.com/*",
        "*://*.facebook.com/*",
        "*://facebook.com/*",
        "*://*.instagram.com/*",
        "*://instagram.com/*",
        "*://*.tiktok.com/*",
        "*://tiktok.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Lock X - Status"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
